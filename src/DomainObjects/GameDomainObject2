Package DomainObjects;

import DataObjects.GameDataObject;

public class GameDomainObject {
    private int gameId;
    private int gameTypeId;
    private int player1Id;
    private int player2Id;
    private int currentTurnPlayer;
    private String status;
    private int winner;
    private String boardAsString;

    public GameDomainObject(GameDataObject gameData) {
        this.gameId = gameData.gameId;
        this.gameTypeId = gameData.gameTypeId;
        this.player1Id = gameData.player1Id;
        this.player2Id = gameData.player2Id;
        this.currentTurnPlayer = gameData.currentTurnPlayer;
        this.status = gameData.status;
        this.winner = gameData.winner;
        this.boardAsString = gameData.boardAsString;
    }

    public String getBoardAsString() {
        // Actual board representation logic here
        return "Initial Board State";
    }
}
