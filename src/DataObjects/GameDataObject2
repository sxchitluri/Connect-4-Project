Package DataObjects;

import DomainObjects.GameDomainObject;

public class GameDataObject {
    public int gameId;
    public int gameTypeId; //still dont get this
    public int player1Id;
    public int player2Id;
    public int currentTurnPlayer;
    public String status;
    public int winner;
    public String boardAsString; //Need to determine where this comes into play
    public boolean success; //Not sure about this part
    

    public GameDataObject(int gameId, int gameTypeId, int player1Id, int player2Id) {
        this.gameId = gameId;
        this.gameTypeId = gameTypeId; //again, same as above
        this.player1Id = player1Id;
        this.player2Id = player2Id;
        this.currentTurnPlayer = player2Id; // Always Player 2's turn initially
        this.status = "Playing"; // Status is "Playing" when game starts
        this.winner = 0; // Default winner is 0 indicating no winner yet
        this.boardAsString = new GameDomainObject().getBoardAsString();
        //  this.success = ??;
    }
    
}
